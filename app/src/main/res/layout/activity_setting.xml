<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theframeset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:focusable="true"  
    android:focusableInTouchMode="true"
    >

    <ImageButton
        android:id="@+id/set_settingBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

    <ImageButton
        android:id="@+id/set_guidingBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
         />

    <EditText
        android:id="@+id/edittext_line1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        />

    <EditText
        android:id="@+id/edittext_line2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
         />

    <ImageView
        android:id="@+id/imageview_redface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/redface" />

    <ImageView
        android:id="@+id/imageview_blueface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blueface" />

    <ImageButton
        android:id="@+id/imageButton_no_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <ImageButton
        android:id="@+id/imageButton_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <ImageButton
        android:id="@+id/set_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm" />
     <ImageButton
        android:id="@+id/imageButton_set_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dismissbtn" />

</FrameLayout>