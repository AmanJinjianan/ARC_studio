<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_t"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="18dp">

        <ImageButton
            android:id="@+id/result_train_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bluetooth_blue" />

        <ImageButton
            android:id="@+id/imageback_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back_btn" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="14"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.myview.MyRelayoutLayout

            android:id="@+id/center_end110_train"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/face1_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imagetui1_train"
                android:layout_marginLeft="60dp"
                android:background="@drawable/redface" />

            <ImageView
                android:id="@+id/face2_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView1_train"
                android:background="@drawable/blueface" />

        </com.myview.MyRelayoutLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="18dp">

       <ImageView
           android:id="@+id/iv_result_train_logo"
           android:layout_width="200dp"
           android:layout_height="80dp"
           android:layout_centerInParent="true"
           android:background="@drawable/logo">

       </ImageView>

    </RelativeLayout>

</LinearLayout>