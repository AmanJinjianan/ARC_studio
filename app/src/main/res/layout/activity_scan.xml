<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scan_back"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:launchMode="singleTask" 
    android:screenOrientation="portrait"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_weight="1.1"
        android:id="@+id/RelativeLayout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="50dp"
        android:orientation="horizontal">
        
        <ImageButton
            android:id="@+id/btn_scan_activity_bluetooth_blue"
            android:layout_width="57dp"
            android:layout_height="76dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bluetooth_blue" />
        

        <ImageButton
            android:id="@+id/btn_scan_activity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back_btn" />
        
       
    </RelativeLayout>
    
    
   <RelativeLayout
       	android:layout_weight="9"
        android:id="@+id/RelativeLayout_center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/RelativeLayout_top">
        
        <ImageView
            android:id="@+id/scan_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/scan_back"
            android:contentDescription="@null"/>
      	
        <ImageView
            android:id="@+id/scan_front_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/scan_back_image"
            android:layout_alignRight="@+id/scan_back_image"
            android:src="@drawable/scan_front"
            android:contentDescription="@null"/>

       <!--  <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/scan_back_image"
            android:layout_alignLeft="@+id/scan_back_image"
            android:layout_marginBottom="44dp"
            android:text="中文" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignRight="@+id/scan_back_image"
            android:text="English" /> -->

        <ImageButton
            android:id="@+id/scan_text_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/scantext" />
    
    </RelativeLayout>
    
    </LinearLayout>
